# ミエルボード 本番環境変数
# コピーして .env.production を作成: cp .env.production.example .env.production

# Database (ホスト側 PostgreSQL に接続)
DATABASE_URL=postgresql://wbs_prod:CHANGE_ME@host.docker.internal:5432/wbs_production

# JWT (openssl rand -hex 32 で生成)
JWT_SECRET=CHANGE_ME

# Application
APP_BASE_URL=https://mielplus.jp

# Google OAuth (Google Cloud Console で本番ドメインを設定)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://mielplus.jp/api/calendar/google/callback

# Calendar encryption key (openssl rand -hex 32 で生成)
CALENDAR_ENCRYPTION_KEY=CHANGE_ME

# Stripe (テストキー or 本番キー)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
